{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/i18n/*": ["./i18n/*"],
      "@/hooks/*": ["./utils/hooks/*"],
      "@/types/*": ["./utils/@types/*"],
      "@/assets/*": ["./assets/*"],
      "@/functions/*": ["./utils/functions/*"],
      "@/consts/*": ["./utils/consts/*"],
      "@/sections/*": ["./components/sections/*"],
      "@/components/*": ["./components/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "views/portfolio"
  ],
  "exclude": ["node_modules"]
}
